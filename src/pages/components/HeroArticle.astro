---
const { ArticleOverkskrift, brødtekst, Hero_img } = Astro.props;
---

<section>
  <h1>{ArticleOverkskrift}</h1>
  <p>{brødtekst}</p>
  <img src={Hero_img} alt="" />
</section>

<style>
  h1 {
    font-size: 4rem;
    text-align: center;
    margin: 0 auto;
    max-width: 1000px;
    margin-bottom: 2rem;
  }

  p {
    font-size: 1.5rem;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
    margin-bottom: 2rem;
  }

  img {
    object-fit: cover;
    margin-bottom: 4rem;
  }

  section {
    margin-top: 10rem;
  }
</style>
