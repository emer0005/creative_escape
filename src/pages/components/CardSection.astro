<style>
  .grid_1-1-1-1 {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    align-items: center;
    justify-items: center;
  }

  .cardsection {
    padding: 3.5rem 0;
    margin-bottom: 4rem;
  }

  h2 {
    text-align: center;
    font-size: 3rem;
    padding-bottom: 3.5rem;
  }

  .featured h2 {
    color: #00ff15;
  }

  .featured {
    background: #af9f91;
  }
</style>
